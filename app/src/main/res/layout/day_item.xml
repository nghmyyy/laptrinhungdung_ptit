<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="1"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtSumInDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="In: 0"
        android:textColor="#33691E"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/txtDate"
        app:layout_constraintStart_toStartOf="@+id/txtDate"
        app:layout_constraintTop_toBottomOf="@+id/txtDate" />

    <TextView
        android:id="@+id/txtSumOutDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Out: 0"
        android:textColor="#B71C1C"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/txtSumInDay"
        app:layout_constraintStart_toStartOf="@+id/txtSumInDay"
        app:layout_constraintTop_toBottomOf="@+id/txtSumInDay" />

</androidx.constraintlayout.widget.ConstraintLayout>
